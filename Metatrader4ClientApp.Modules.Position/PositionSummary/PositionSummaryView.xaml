                                <Button
                                    Grid.Column="0"
                                    Width="30"
                                    AutomationProperties.AutomationId="ActionsBuyButton"
                                    Command="{Binding Path=DataContext.BuyCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                    CommandParameter="{Binding Path=TickerSymbol}"
